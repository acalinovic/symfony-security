{% block stylesheets %}
    <style>
        body
        {
            background-color: #313131;
        }
        #loginform
        {
            display: flex;
            flex-direction: column;
            font-family: sans-serif;
            align-items: center;
            justify-content: center;
            height: 100%;
        }
        fieldset
        {
            border: none;
        }
        .loginFieldSet
        {
            margin: 20px;
            padding: 200px;
            background-color: #5eb5e0;
            border-radius: 10px;
            box-shadow: inset 10px 10px 10px -7px rgba(0,0,0,0.75), inset -10px -10px 10px -7px rgba(0,0,0,0.75);
        }
        button
        {
            height: 0px; width: 0px; border: none; padding: 0px;
        }


    </style>
{% endblock %}
{% block login %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
        <form id="loginForm" action="{{ path('login') }}" method="post">
            <div class="loginFieldSet">
                <fieldset>
                    <label for="username" >Username:</label>
                    <input type="text" id="username" name="_username"  value="{{ last_username }}" autofocus/>

                </fieldset>
                <fieldset>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password" />
                </fieldset>

            </div>
            <button type="submit" ></button>

        </form>

{% endblock %}