{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ profile.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ profile.lastName }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
